{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": false,
  "overrides": [
    {
      "files": [".babelrc", ".prettierrc", ".eslintrc", "package.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "src/**/*.css",
      "options": { "parser": "css" }
    },
    {
      "files": "src/**/*.md",
      "options": { "parser": "markdown" }
    }
  ],
  "parser": "babel-flow",
  "printWidth": 80,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false
}
